<h1>Listing notes</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th>User_id</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= image_tag note.image.url(:medium) %>
        <td><%= note.description %></td>
        <td><%= note.user.email if note.user %></td>
        <td><%= link_to 'Show', note %></td>
        <% if note.user == current_user %>
          <td><%= link_to 'Edit', edit_note_path(note) %></td>
          <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>

<%= link_to 'New Note', new_note_path %>

<% end %>
